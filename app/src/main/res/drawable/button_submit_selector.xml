<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!--<solid android:color="#6f8499" />-->
            <corners android:radius="8dp" />
            <gradient
                android:angle="360"
                android:endColor="#71879e"
                android:startColor="#6f8499" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <!--<solid android:color="#1688ff" />-->
            <corners android:radius="8dp" />
            <gradient
                android:angle="360"
                android:endColor="#0f6ed1"
                android:startColor="#1688ff" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <!--<solid android:color="@color/gray" />-->
            <corners android:radius="8dp" />
            <gradient
                android:angle="360"
                android:endColor="#a6a1a1"
                android:startColor="@color/gray" />
        </shape>
    </item>

</selector>
